{
    "expo": {
        "name": "Pingua",
        "slug": "com.latinary.pingua",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./src/assets/images/mascot.png",
        "scheme": "pingua",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.latinary.pingua",
            "buildNumber": "1",
            "splash": {
                "image": "./src/assets/images/splash-icon.png",
                "imageWidth": 128,
                "resizeMode": "contain",
                "backgroundColor": "#7d51ef"
            },
            "userInterfaceStyle": "automatic"
        },
        "android": {
            "package": "com.latinary.pingua",
            "versionCode": 1,
            "splash": {
                "image": "./src/assets/images/splash-icon.png",
                "imageWidth": 128,
                "resizeMode": "contain",
                "backgroundColor": "#7d51ef"
            },
            "softwareKeyboardLayoutMode": "pan",
            "permissions": ["android.permission.VIBRATE"],
            "userInterfaceStyle": "automatic"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./src/assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./src/assets/images/splash-icon.png",
                    "imageWidth": 128,
                    "resizeMode": "contain",
                    "backgroundColor": "#7d51ef"
                }
            ],
            [
                "expo-video",
                {
                    "supportsBackgroundPlayback": false,
                    "supportsPictureInPicture": false
                }
            ],
            "expo-localization",
            [
                "expo-build-properties",
                {
                    "android": {
                        "usesCleartextTraffic": true
                    }
                }
            ],
            [
                "expo-av",
                {
                    "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone. This is required for text-to-speech functionality."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "router": {
                "origin": false
            },
            "eas": {
                "projectId": "9678f773-8eb3-4510-b53f-55cd6b7b798e"
            }
        },
        "owner": "damix"
    }
}
